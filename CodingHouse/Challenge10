var wordsReverser = function(string) {
  var words = string.split(/\b/);
  
  var outputString = words.map(function(word){
    if (/\w/.test(word)) {
      return word.split("").reverse().join("");
    }
    else {
      return word;
    }
  });
  
  console.log(outputString.join(""));
};

wordsReverser("This is fun, hopefully.");
